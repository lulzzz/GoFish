@model GoFish.UI.MVC.AdvertViewModel

<h2>Your advert</h2>

<div>
    <form class="form" asp-action="Edit" autocomplete="off">
        <input type="hidden" asp-for="AdvertData.Id"></input>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="AdvertData.Pitch"></label>
            <div class="col-sm-10">
                <input class="form-control" type="text" asp-for="AdvertData.Pitch" autofocus></input>
                <span asp-validation-for="AdvertData.Pitch" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="AdvertData.FishingMethod"></label>
            <div class="col-sm-10">
                <select class="form-control" asp-for="AdvertData.FishingMethod" asp-items="@(new SelectList(Model.FishingMethods,"Key","Value"))"></select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="AdvertData.CatchTypeId"></label>
            <div class="col-sm-10">
                <select class="form-control" asp-for="AdvertData.CatchTypeId" asp-items="@(new SelectList(Model.CatchTypes,"Key","Value"))"></select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="AdvertData.Quantity"></label>
            <div class="col-sm-10">
                <input class="form-control" type="text" asp-for="AdvertData.Quantity"></input>
                <span asp-validation-for="AdvertData.Quantity" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="AdvertData.Price"></label>
            <div class="col-sm-10">
                <input class="form-control" type="text" asp-for="AdvertData.Price"></input>
                <span asp-validation-for="AdvertData.Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button name="SubmitButton" type="submit" class="btn btn-default" value="Cancel">Back</button>
                <button name="SubmitButton" type="submit" class="btn btn-primary" value="Save">Save changes</button>
            </div>
        </div>
    </form>
</div>